#!/usr/bin/env bash
# create_droplet_nyc.sh
# نیازمندی‌ها: curl, jq, sshpass
set -euo pipefail

# بررسی نصب sshpass
if ! command -v sshpass &> /dev/null; then
    echo "sshpass not found. Installing..."
    if command -v apt &> /dev/null; then
        sudo apt update && sudo apt install -y sshpass
    elif command -v yum &> /dev/null; then
        sudo yum install -y epel-release
        sudo yum install -y sshpass
    else
        echo "Package manager not supported. Please install sshpass manually."
        exit 1
    fi
fi

# دریافت توکن از کاربر
read -sp "Enter your DigitalOcean API token: " DO_TOKEN
echo ""

API="https://api.digitalocean.com/v2/droplets"

# Payload JSON
payload=$(jq -n \
  --arg name "vm1" \
  --arg region "nyc3" \
  --arg size "s-1vcpu-1gb" \
  --arg image "ubuntu-24-04-x64" \
  --arg password "M#f4Z!7\$p9m" \
  --arg tag "first-project" \
  '{
    name: $name,
    region: $region,
    size: $size,
    image: $image,
    backups: false,
    ipv6: true,
    tags: [$tag],
    monitoring: true,
    "ssh_keys": [],
    "user_data": "",
    "features": [],
    "password": $password
  }'
)

# ایجاد droplet
echo "Creating droplet 'vm1' in New York..."
response=$(curl -sS -X POST "$API" \
  -H "Content-Type: application/json" \
  -H "Authorization: Bearer $DO_TOKEN" \
  -d "$payload")

# گرفتن ID
DROPLET_ID=$(echo "$response" | jq -r '.droplet.id // empty')
if [[ -z "$DROPLET_ID" ]]; then
  echo "Failed to create droplet. Response:"
  echo "$response" | jq .
  exit 1
fi
echo "Droplet created with ID: $DROPLET_ID"

# Poll until droplet becomes active
echo "Waiting for droplet to become active..."
while true; do
  sleep 5
  status=$(curl -sS -H "Authorization: Bearer $DO_TOKEN" "$API/$DROPLET_ID" | jq -r '.droplet.status')
  echo "Status: $status"
  if [[ "$status" == "active" ]]; then
    ipv4=$(curl -sS -H "Authorization: Bearer $DO_TOKEN" "$API/$DROPLET_ID" | jq -r '.droplet.networks.v4[] | select(.type=="public") | .ip_address')
    echo "Droplet is active! Public IPv4: $ipv4"
    break
  fi
done

# ورود به سرور و اجرای دستور نصب
echo "Connecting to droplet via SSH and running the install script..."
sshpass -p "M#f4Z!7\$p9m" ssh -o StrictHostKeyChecking=no root@$ipv4 \
  "bash <(curl -Ls https://raw.githubusercontent.com/parhamiano/install-xray-panel/refs/heads/main/install)"
